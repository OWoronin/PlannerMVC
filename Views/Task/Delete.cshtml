@model Pz_Proj_11_12.Models.TaskModel

@{
	ViewData["Title"] = "Delete task";
}
<h1>Delete task</h1>
<hr />

<h4>Are you sure you want to delete this?</h4>

<div class="my-form-card">
	<table class="details-table">
		<tr>
			<th>@Html.DisplayNameFor(model => model.Name)</th>
			<td>@Html.DisplayFor(model => model.Name)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Description)</th>
			<td>@Html.DisplayFor(model => model.Description)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Difficulty)</th>
			<td>@Html.DisplayFor(model => model.Difficulty.Name)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Priority)</th>
			<td>@Html.DisplayFor(model => model.Priority.Name)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Status)</th>
			<td>@Html.DisplayFor(model => model.Status.Name)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
			<td>@Html.DisplayFor(model => model.CreatedDate)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Day)</th>
			<td>@Html.DisplayFor(model => model.Day.Name)</td>
		</tr>
	</table>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="hidden" name="plannerId" value="@ViewData["plannerId"]" />
		<div class="details-buttons">
			<button type="submit" class="delete-bttn">
				<i class="fas fa-trash-alt"></i> Delete
			</button>
			<a asp-action="Index" asp-route-id="@ViewData["plannerId"]" class="back-bttn">Back</a>
		</div>
	</form>
</div>
