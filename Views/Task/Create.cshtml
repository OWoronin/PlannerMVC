@model Pz_Proj_11_12.Models.TaskModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskModel</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Task's difficulty level</label>
                <select asp-for="DifficultyId" class ="form-control" asp-items="ViewBag.DifficultyId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Task's priority level</label>
                <select asp-for="PriorityId" class ="form-control" asp-items="ViewBag.PriorityId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Task's status</label>
                <select asp-for="StatusId" class ="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
            <label class="control-label">Day of the week</label>
            <select asp-for="DayId" class ="form-control" asp-items="ViewBag.DayId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
