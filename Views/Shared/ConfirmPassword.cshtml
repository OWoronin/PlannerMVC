@model Pz_Proj_11_12.Models.User

<div id="passwordConfirmModal" class="modal-confirm-overlay" style="display:none;">
	<div class="modal-confirm-card">
		<div class="modal-confirm-title">
			Confirm your password
		</div>
		<form id="passwordConfirmForm" method="post">
			<input type="hidden" name="Id" value="@Model?.Id" />
			<input type="hidden" id="passwordOperationType" name="OperationType" />
			<input type="password" name="ConfirmPassword" class="form-control user-input w-100 mb-3" placeholder="Enter your password" required autocomplete="current-password" />
			<div class="details-buttons">
				<button type="submit" class="add-bttn full-width-btn-fix">Confirm</button>
				<button type="button" class="back-bttn full-width-btn-fix" onclick="hidePasswordConfirmModal()">Cancel</button>
			</div>
		</form>
	</div>
</div>
